@model Actor 

@{
    ViewData["Title"] = "Add new actor";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>
                Add a new Actor
            </h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-1">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger" style="padding: 10px"></div>
                </form>
                <div class="form-group text-center">
                    <img id="ProfilePicturePreview" />
                </div>
                <div class="form-group" style="padding: 10px">
                    <label asp-for="ProfilePictureUrl" class="control-label"></label>
                    <input asp-for="ProfilePictureUrl" class="form-control" />
                    <span asp-validation-for="ProfilePictureUrl" class="text-danger"></span>
                </div>
                <div class="form-group" style="padding: 10px">
                    <label asp-for="FullName" class="control-label"></label>
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="form-group" style="padding: 10px">
                    <label asp-for="Bio" class="control-label"></label>
                    <input asp-for="Bio" class="form-control" />
                    <span asp-validation-for="Bio" class="text-danger"></span>
                </div>
                <div class="form-group" style="padding: 10px">
                    <input type="submit" value="Create" class="btn btn-outline-success float-right" />
                    <a class="btn  btn-outline-secondary" asp-action="Index" >
                        Show all
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $("#ProfilePictureUrl").on("change", function (){ //whenever the url is changed we call a function
            var output = document.getElementById('ProfilePicturePreview') //it gets the preview
            output.src = $(this).val(); //the source is set as the ProfilePicturePreview
            // this is the profilepictureurl i guess
        })
    </script>
}