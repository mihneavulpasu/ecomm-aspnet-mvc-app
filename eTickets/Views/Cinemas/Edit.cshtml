@model Cinema 

@{
    ViewData["Title"] = "Edit a cinema";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>
                Edit the details for @Model.Name
            </h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-1">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger" style="padding: 10px"></div>

                <div class="form-group text-center">
                    <img  class="border-info rounded-circle" style="max-width: 150px" id="CinemaLogoPreview" />
                </div>
                <div class="form-group" style="padding: 10px">
                    <label asp-for="Logo" class="control-label"></label>
                    <input asp-for="Logo" class="form-control" />
                    <span asp-validation-for="Logo" class="text-danger"></span>
                </div>
                <div class="form-group" style="padding: 10px">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group" style="padding: 10px">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group" style="padding: 10px">
                    <input type="submit" value="Update" class="btn btn-outline-success float-end" />
                    <a class="btn  btn-outline-secondary" asp-action="Index" >
                        Show all
                    </a>
                </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        //here we call the same function as the one below but we need it because we could not preview the profile picture properly after pressing the submit button
        $(document).ready(function (){
                var output = document.getElementById('CinemaLogoPreview')
                output.src = $("#Logo").val();
        })

        $("#Logo").on("change", function (){ //whenever the url is changed we call a function
                var output = document.getElementById('CinemaLogoPreview') //it gets the preview
                output.src = $(this).val(); //the source is set as the ProfilePicturePreview
            // this is the profilepictureurl i guess
        })
    </script>
}